{
  "extends": [
    "next/core-web-vitals", //Next.js에서 사용하는 ESLint 규칙이 포함되어있는 확장
    "eslint:recommended", //ESLint에서 권장하는 규칙이 포함되어있는 확장
    "plugin:@typescript-eslint/recommended", //TypeScript에서 권장하는 규칙이 포함되어있는 확장
    //"plugin:@next/next/recommended", //Next.js에서 권장하는 규칙이 포함되어있는 확장
    "plugin:react/recommended", //React에서 권장하는 규칙이 포함되어있는 확장
    "plugin:react-hooks/recommended", //React Hooks에서 권장하는 규칙이 포함되어있는 확장
    "prettier" //Prettier과의 충돌을 방지하는 확장이다.
  ],
  "parser": "@typescript-eslint/parser", //ESLint가 TypeScript 코드를 이해할 수 있게 해주는 파서
  "rules": {
    "no-console": "warn", // 콘솔 사용 경고
    "react/react-in-jsx-scope": "off" //React를 import하지 않아도 사용할 수 있음
  }
}
